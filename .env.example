# アプリケーション設定
NODE_ENV=development
PORT=3000
HOST=localhost

# データベース設定
DB_PATH=./data/database.sqlite

# セッション設定
SESSION_SECRET=your-secret-key
SESSION_MAX_AGE=86400000

# セキュリティ設定
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# API設定
API_VERSION=v1
API_PREFIX=/api

# ログ設定
LOG_LEVEL=debug
LOG_FORMAT=dev

# キャッシュ設定
CACHE_ENABLE=true
CACHE_TTL=3600

# PWA設定
PWA_APP_NAME=アトムの泉
PWA_SHORT_NAME=アトムの泉
PWA_THEME_COLOR=#3498db
PWA_BACKGROUND_COLOR=#f8fafc

# コンテンツ設定
CONTENT_PATH=./content
CONTENT_MAX_SIZE=5242880

# アナリティクス設定
ANALYTICS_ENABLED=false
ANALYTICS_ID=your-analytics-id

# メール設定
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
MAIL_FROM=noreply@atomspring.example.com

# 管理者設定
ADMIN_EMAIL=admin@atomspring.example.com
SUPPORT_EMAIL=support@atomspring.example.com

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30